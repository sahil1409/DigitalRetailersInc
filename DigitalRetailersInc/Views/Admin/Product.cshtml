@model IEnumerable<DigitalRetailersInc.DAL.laptop>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Product
        <a style = "float: right;" href="../Admin/ProductAdd" class="btn btn-info pull-right">Add New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @{int count = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@item.laptop_name</td>
                            <td>
                                @Html.ActionLink("Edit", "ProductEdit", new { laptop_id = item.laptop_id })
                            </td>

                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
